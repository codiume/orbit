{
  "name": "astro-seo-schema",
  "description": "Easily insert valid Schema.org JSON-LD in your Astro apps.",
  "version": "0.0.2-beta",
  "scripts": {
    "astro:dev": "astro dev",
    "astro:build": "astro build",
    "astro:check": "astro check",
    "build": "node ./scripts/build.js && npm run typecheck:emit",
    "typecheck": "tsc --noEmit",
    "typecheck:emit": "tsc --declaration --emitDeclarationOnly --outDir dist"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "author": "codiume",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codiume/astro-seo-schema.git"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "astro-component",
    "json-ld",
    "schema-org",
    "semantic-web"
  ],
  "bugs": "https://github.com/codiume/astro-seo-schema/issues",
  "homepage": "https://github.com/codiume/astro-seo-schema",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "devDependencies": {
    "astro": "^1.0.0",
    "del": "^7.0.0",
    "esbuild": "^0.14.54",
    "esbuild-plugin-copy": "^1.3.0"
  },
  "dependencies": {
    "schema-dts": "^1.1.0"
  }
}
